<p id="notice"><%= notice %></p>

<table class="table table-striped table-bordered text-center">
  <thead>
    <tr>
      <th>Name</th>
      <td><%= @user.name %></td>
    </tr>
  </thead>

  <tbody>
      <tr>
        <th>Email</th>
        <td><%= @user.email %></td>
      </tr>
  </tbody>

  <tbody>
      <tr>
        <th>Is admin</th>
        <td><%= @user.is_admin %></td>
      </tr>
  </tbody>
</table>

<table class="table table-striped table-bordered text-center">
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Deadline</th>
      <th>Status</th>
      <th>Priority</th>

      <th colspan="2"></th>

    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task_row"><%= task.name %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status %></td>
        <td class="priority_row"><%= task.priority %></td>

        <td><%= task.created_at %></td>
        <td><%= task.updated_at %></td>
        </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tasks %>
<br>

<%= link_to 'Back', admin_users_path, class:"btn btn-secondary" %>
