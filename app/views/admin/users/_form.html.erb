<%= form_with(model: user, url: choose_new_or_edit(user), class:"col-4") do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class:"form-label" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :email, class:"form-label" %>
    <%= form.text_field :email, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :password, class:"form-label" %>
    <%= form.text_field :password, class:"form-control" %>
  </div>

  <div class="field d-flex">
    <%= form.label :is_admin, "Is admin", class:"form-check-label" %>
    <%= form.radio_button :is_admin, "true", class:"form-check-input" %>
    <%= form.label :is_admin, "Yes" %>
    <%= form.radio_button :is_admin, "false" %>
    <%= form.label :is_admin, "No" %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
